 <!-- ******************************************************************
 * AppConfig definition file for the HCL Sametime application on iOS
 * devices.
 *
 * This file defines the capabilities that can be managed via MDM 
 * provider for the HCL Sametime Application when running on iOS devices.
 *
 * For more information on AppConfig for iOS see the community here:
 * https://www.appconfig.org/ios/
 * 
 ****************************************************************** -->


<managedAppConfiguration>
    <version>1</version>
    <bundleId>com.hcl.pnp.cwp.sametime</bundleId>
    <dict>

        <!-- ******************************************************************
            Community Settings - Data Type and Default Value
        ****************************************************************** -->

        <string keyName="communityName">
            <defaultValue>
                <value>AppConfig</value>
            </defaultValue>
        </string>    

        <string keyName="communityHostServer"/>

        <integer keyName="communityHostPort">
            <defaultValue>
                <value>443</value>
            </defaultValue>
        </integer>

        <!-- ******************************************************************
            Advanced Community Setttings - Data Type and Default Value
        ****************************************************************** -->

        <boolean keyName="secureConnection">
            <defaultValue>
                <value>true</value>
            </defaultValue>
        </boolean>

        <boolean keyName="allowSelfSignedCertificate">
            <defaultValue>
                <value>false</value>
            </defaultValue>
        </boolean>

        <string keyName="connectionType">
            <defaultValue>
                <value>direct</value>
            </defaultValue>
        </string>
       
        <string keyName="authProxyUserId"/>

        <string keyName="authProxyPassword"/>

        <!-- ******************************************************************
            Community credentials - Data Type and Default Value
        ****************************************************************** -->

        <boolean keyName="shareProxyCredentials">
            <defaultValue>
                <value>false</value>
            </defaultValue>
        </boolean>

        <string keyName="communityUserId"/>
        
        <string keyName="communityPassword"/>

        <boolean keyName="rememberPassword">
            <defaultValue>
                <value>true</value>
            </defaultValue>
        </boolean>

        <!-- ******************************************************************
            Application Restrictions - Data Type and Default Value
        ****************************************************************** -->

        <boolean keyName="lockCommunitySettings">
            <defaultValue>
                <value>false</value>
            </defaultValue>
        </boolean>

        <boolean keyName="allowMultipleCommunities">
            <defaultValue>
                <value>true</value>
            </defaultValue>
        </boolean>

        <boolean keyName="restrictClipboard">
            <defaultValue>
                <value>false</value>
            </defaultValue>
        </boolean>


        <!-- ******************************************************************
            Misc Settings - Data Type and Default Value
        ****************************************************************** -->

    </dict>
    
    <presentation defaultLocale="en-US">

        <!-- ******************************************************************
            Community Settings - Label, Description and Input Type                   
        ****************************************************************** -->

        <fieldGroup>
            <name>
                <language value="en-US">Server Community Settings</language>
            </name>
            
            <field keyName="communityName" type="input">
                <label>
                    <language value="en-US">Community Display Name</language>
                </label>
                <description>
                    <language value="en-US">Provide a nickname for the community.  If the default of AppConfig is removed, the community host server name is used.</language>
                </description>
            </field>
            
            <field keyName="communityHostServer" type="input">
                <label>
                    <language value="en-US"> Host Server</language>
                </label>
                <description>
                    <language value="en-US">Provide the fully qualified Sametime Proxy server host name or IP address.  Example: stproxy.mycompany.com.  Note:  If you are connecting through an authenticating proxy use that address here.  If this field is left blank the configuration will be abandoned.</language>
                </description>
            </field>

            <field keyName="communityHostPort" type="input">
                <label>
                    <language value="en-US">Port</language>
                </label>
                <description>
                    <language value="en-US">Provide the port where your Sametime Proxy server or Authentication Proxy server is listening.</language>
                </description>
            </field>

        </fieldGroup>

        <!-- ******************************************************************
            Advanced Community Settings - Label, Description and Input Type
         ****************************************************************** -->

        <fieldGroup>
            <name>
                <language value="en-US">Advanced Community Settings</language>
            </name>

            <field keyName="secureConnection" type="checkbox">
                <label>
                    <language value="en-US">Secure Connection</language>
                </label>
                <description>
                    <language value="en-US">Recommendation is to leave checked so the connecton to the server is over SSL.  When not checked, SSL is not used and the security of your data could be compromised.</language>
                </description>
            </field>

            <field keyName="allowSelfSignedCertificate" type="checkbox">
                <label>
                    <language value="en-US">Allow Self Signed Certificate</language>
                </label>
                <description>
                    <language value="en-US">Recommendation is to leave unchecked. When checked, the identity of the community cannot be verified.  This parameter only applies when Secure Connection is checked.</language>
                </description>
            </field>

            <field keyName="connectionType" type="select">
                <label>
                    <language value="en-US">Connection Type</language>
                </label>
                <description>
                    <language value="en-US">Will this community configuration connect directly to the Sametime Proxy or do you use an authentication proxy such as HCL SafeLinx? If you choose Direct Connection, then the Host Server and Port configured above should be the address of the Sametime Proxy and it should be internet accessible.  If you choose Authenticating Proxy, then the Host Server and Port should be the address of the authentication proxy.</language>
                </description>
                <options>
                    <option value="direct">
                        <language value="en-US">Direct Connection</language>
                    </option>
                    <option value="authProxy">
                        <language value="en-US">Authenticating Proxy</language>
                    </option>
                </options>
            </field>

            <field keyName="authProxyUserId" type="input">
                <label>
                    <language value="en-US">Authenticating Proxy User ID</language>
                </label>
                <description>
                    <language value="en-US">This parameter only applies if the Connection Type is Authenticating Proxy.  Substitution variables are accepted.</language>
                </description>
            </field>

            <field keyName="authProxyPassword" type="input">
                <label>
                    <language value="en-US">Authenticating Proxy Password</language>
                </label>
                <description>
                    <language value="en-US">This parameter only applies if the Connection Type is Authenticating Proxy.  Substitution variables are accepted if they are available.</language>
                </description>
            </field>

        </fieldGroup>

        <!-- ******************************************************************
            Credentials - Label, Description and Input Type
         ****************************************************************** -->

        <fieldGroup>
            <name>
                <language value="en-US">Community Credentials</language>
            </name>

            <field keyName="shareProxyCredentials" type="checkbox">
                <label>
                    <language value="en-US">Share Auth Proxy Credentials</language>
                </label>
                <description>
                    <language value="en-US">This parameter only applies if the Connection Type in Advanced Properties is set to Authenticating Proxy.  Check this option if the same credentials would be used for the Authenticating Proxy and the Sametime Community.</language>
                </description>
            </field>

            <field keyName="communityUserId" type="input">
                <label>
                    <language value="en-US">User ID</language>
                </label>
                <description>
                    <language value="en-US">Specify a user ID to be used with Sametime.  Substitution variables are accepted.  This parameter is ignored if Share Auth Proxy Credentials is checked. In this case the authenticating proxy ID and password will be used to login to Sametime.</language>
                </description>
            </field>

            <field keyName="communityPassword" type="input">
                <label>
                    <language value="en-US">Password</language>
                </label>
                <description>
                    <language value="en-US">Specify a password to be used with Sametime.  Substitution variables are accepted.  This parameter is ignored if Share Auth Proxy Credentials is checked. In this case the authenticating proxy ID and password will be used to login to Sametime.</language>
                </description>
            </field>

            <field keyName="rememberPassword" type="checkbox">
                <label>
                    <language value="en-US">Remember Password</language>
                </label>
                <description>
                    <language value="en-US">Leave checked to allow the password to be saved once entered.  Uncheck to force the user to enter a password with each login to HCL Sametime.</language>
                </description>
            </field>

        </fieldGroup>

        <!-- ******************************************************************
            Application Restrictions - Label, Description and Input Type
         ****************************************************************** -->

        <fieldGroup>
            <name>
                <language value="en-US">Application Restrictions</language>
            </name>

            <field keyName="lockCommunitySettings" type="checkbox">
                <label>
                    <language value="en-US">Lock Community Configuration</language>
                </label>
                <description>
                    <language value="en-US">When checked, the user will not be able to edit this community configuration.</language>
                </description>
            </field>

            <field keyName="allowMultipleCommunities" type="checkbox">
                <label>
                    <language value="en-US">Allow Multiple Communities</language>
                </label>
                <description>
                    <language value="en-US">When checked, the user will be allowed to configure additional communities.  When unchecked, all community configurations except this one will be removed.</language>
                </description>
            </field>

            <field keyName="restrictClipboard" type="checkbox">
                <label>
                    <language value="en-US">Restrict Clipboard</language>
                </label>
                <description>
                    <language value="en-US">Check to enforce that copy and paste operations are restricted to only this application.  Chat information copied to the clipboard from inside Sametime app can only be pasted within Sametime.</language>
                </description>
            </field>
            
        </fieldGroup> 
    </presentation>
</managedAppConfiguration>
